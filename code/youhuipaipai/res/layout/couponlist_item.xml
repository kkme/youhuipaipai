<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/shopimg_iv"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <RelativeLayout
            android:id="@+id/title_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/shopimg_iv" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汗拿山烤肉" />
			
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="火锅"
                android:id="@+id/type_tv"  
                 />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               	android:background="@drawable/youhuiquan_yishiyong"
               	android:layout_toLeftOf="@id/type_tv"
               	android:layout_marginRight="20dp"
               	android:visibility="gone"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/jifen_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_rl"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/shopimg_iv"
            android:text="90积分"
            android:textSize="16dp"
            android:textColor="@color/red"
             />

        <RelativeLayout
            android:id="@+id/cost_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jifen_tv"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/shopimg_iv" 
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2013.12.12-2014.2.3"
                android:textSize="13dp" 
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/peoplenums_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/remenyouhuiquan_zhuye_tuangou" 
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="123"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:gravity="bottom"
                />

        </RelativeLayout>
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/youhuiquandelete_btn_selector"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:textColor="@color/white"
            android:id="@+id/delete_btn"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>